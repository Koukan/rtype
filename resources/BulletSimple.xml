<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
    <fire>
      <direction type="absolute">0</direction>
      <bulletRef label="enemy"/>
    </fire>
</action>

<bullet label="enemy" group="ship" sprite="enemy tron" simpleGroup="shot" simpleSprite="bullet">
	<hitbox shape="circle" radius="2" />
	<simpleHitbox shape="circle" radius="2" />
	<direction type="absolute">180</direction>
	<speed>100</speed>
<action>
	<repeat><times>3000</times><action>
		<fire>
	   	<direction type="absolute">180</direction>
			<speed>200</speed>
	   	<bulletRef label="weak">
				<param>300</param>
			</bulletRef>
	  	</fire>
		<wait>10</wait>
	</action></repeat>
</action>
</bullet>

<bullet label="weak" group="ship" sprite="shot">
<hitbox shape="circle" radius="2" />
<simpleHitbox shape="circle" radius="2" />
	<action>
	  <wait>$1</wait>
	  <vanish/>
	</action>
</bullet>

</bulletml>
