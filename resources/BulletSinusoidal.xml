<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
    <fire>
		<bulletRef label="enemySinusoidal"/>
    </fire>
    <wait>800</wait>
</action>

<bullet label="enemySinusoidal" group="ship" sprite="enemy star" simpleGroup="ship" simpleSprite="shot">
	<hitbox shape="circle" radius="2" />
	<simpleHitbox shape="circle" radius="2" />
	<direction type="absolute">90</direction>
	<speed>40</speed>
	
	<action>
		<repeat><times>10</times>
			<action>
				<repeat><times>9</times>
					<actionRef label="loop">
						<param>1</param>
					</actionRef>
				</repeat>
				<repeat><times>9</times>
					<actionRef label="loop">
						<param>-1</param>
					</actionRef>
				</repeat>
			</action>
		</repeat>
	</action>
</bullet>

<action label="loop">
	<changeDirection>
		<direction type="relative">20 * $1</direction>
		<term>1</term>
	</changeDirection>
	<fire>
		<direction type="sequence">20</direction>
		<speed>250</speed>
		<bulletRef label="bullet" />
	</fire>
	<wait>30</wait>
</action>

<bullet label="bullet" group="shot" sprite="animated shot">
	<hitbox shape="circle" radius="2" />
	<simpleHitbox shape="circle" radius="2" />
	<action>
		<wait>5000</wait>
		<vanish/>
	</action>
</bullet>

</bulletml>
