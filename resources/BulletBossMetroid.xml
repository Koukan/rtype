<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
    <fire>
      <direction type="absolute">0</direction>
      <bulletRef label="bossMetroid"/>
    </fire>
</action>

<bullet label="bossMetroid" group="ship" sprite="boss metroid" simpleGroup="shot" simpleSprite="bullet">
	<hitbox shape="circle" radius="2" />
	<simpleHitbox shape="circle" radius="2" />
	<direction type="absolute">180</direction>
	<speed>100</speed>
	<action>
		<wait>100</wait>
		<changeSpeed>
			<speed>0</speed>
			<term>1</term>
		</changeSpeed>
		<wait>20</wait>
		<changeSpeed>
			<speed>80</speed>
			<term>1</term>
		</changeSpeed>
		<changeDirection>
			<direction type="absolute">90</direction>
			<term>1</term>
		</changeDirection>
		<wait>50</wait>
		<fire>
			<speed>100</speed>
			<bulletRef label="littleMetroid"/>
	  	</fire>
		<wait>50</wait>
		<repeat><times>5000</times><action>
			<changeDirection>
				<direction type="absolute">270</direction>
				<term>1</term>
			</changeDirection>
			<actionRef label="normalShot">
				<param>3</param>
			</actionRef>
			<changeDirection>
				<direction type="absolute">90</direction>
				<term>1</term>
			</changeDirection>
			<actionRef label="normalShot">
				<param>3</param>
			</actionRef>
		</action></repeat>
	</action>
</bullet>

<action label="normalShot">
	<repeat><times>$1</times><action>
		<fire>
			<speed>100</speed>
			<bulletRef label="littleMetroid"/>
	  	</fire>
		<wait>200 / $1</wait>
	</action></repeat>
</action>

<bullet label="littleMetroid" sprite="enemy metroid" group="ship" simpleGroup="shot" simpleSprite="bullet">
<hitbox shape="circle" radius="2" />
<simpleHitbox shape="circle" radius="2" />
<direction type="absolute">120 + (120 * $rand)</direction>
	<action>
		<repeat><times>50</times><action>
			<wait>40</wait>
			<fire>
				<speed>150</speed>
				<direction type="absolute">360 * $rand</direction>
				<bullet/>
			</fire>
		</action></repeat>
	</action>
</bullet>

</bulletml>
